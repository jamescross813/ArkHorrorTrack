<h1><%= @scenario.title.capitalize %></h1>

    <h3>Order Number: <%= @scenario.order_number %></h3>
    <h3>Complete? <%= @scenario.is_complete? %></h3>
    <h3>Run Number: <%= @scenario.run_number %></h3>

    <% @scenario.notes.each do |note|%>
        <%= link_to note.title, scenario_note_path(note.scenario_id, note)%>
    <% end %>

<nav>
    <%= link_to "Edit Scenario", edit_game_scenario_path(@scenario.game_id, @scenario) %>
    <%= link_to "Add Note", new_scenario_note_path(@scenario) %>
    <%= link_to "Incomplete Scenarios", game_scenarios_path(@scenario.game_id, @scenario)%>
    <%= link_to "Delete Scenario", game_scenario_path(@scenario.game_id, @scenario),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
</nav>

